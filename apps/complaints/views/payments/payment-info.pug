extends ../components/layout/template.pug
include ../components/navbar/mixin.pug
include ../components/breadcrumb/mixin.pug

block head
	title Update Payment Information

block header
	h1 Update Payment Information
	+navbar
	+breadcrumb
		+navitem("/payments", "Payments")
		+navitem("/payments/" + id, "Payment for: " + receiver)
		+navitem("/payments/" + id + "/edit", "Update Payment Information", true)

block content
	h2 Add payment information
	form(method="post", action=("/payments/" + id), enctype="application/x-www-form-urlencoded")
		input(type="hidden", name="_method", value="patch")
		input(type="hidden", name="action", value="choose")
		if origin
			input(type="hidden", name="origin", value=origin)
		if type === "IBAN"
			label(for="iban") IBAN
			input(id="iban", type="text", name="iban" required)
		if type === "Credit Card"
			label(for="cardnr") Credit Card Number
			input(id="cardnr", type="text", name="cardnr", required)
			label(for="expiryMonth") Month of Expiry
			input(id="expiryMonth", name="expiryMonth", type="number", placeholder="MM", required)
			label(for="expiryYear") Year of Expiry
			input(id="expiryYear", name="expiryYear", type="number", placeholder="YY", required)
			label(for="cvc") CVC
			input(id="cvc", name="cvc", type="number", required)
		input(type="submit")

